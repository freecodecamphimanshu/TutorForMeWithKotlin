<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		tools:context=".Fragment.TutorProfileFragment">

	<ScrollView
			android:padding="@dimen/_5sdp"
			android:id="@+id/main_lay"
			android:fillViewport="true"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/btn_lay">

	<LinearLayout
			android:gravity="center"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<de.hdodenhof.circleimageview.CircleImageView
				android:layout_marginTop="@dimen/_5sdp"
				android:src="@drawable/prf"
				android:layout_width="@dimen/_80sdp"
				android:layout_height="@dimen/_80sdp"/>

		<TextView
				android:layout_marginTop="@dimen/_5sdp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="NAME"
				android:textColor="@color/dark_blue_color"
				android:textSize="@dimen/_12sdp"
				android:textStyle="bold"/>

		<TextView
				android:layout_marginTop="@dimen/_5sdp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="LUH34"
				android:textColor="#787878"
				android:textSize="@dimen/_10sdp"
				android:textStyle="bold"/>

		<TextView
				android:layout_marginTop="@dimen/_2sdp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Male, 28 Years"
				android:textColor="#787878"
				android:textSize="@dimen/_10sdp"
				android:textStyle="bold"/>

		<TextView
				android:layout_marginTop="@dimen/_10sdp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Personal Details"
				android:textColor="@color/dark_blue_color"
				android:textSize="@dimen/_12sdp"
				android:textStyle="bold"/>

		<androidx.cardview.widget.CardView
				android:layout_margin="@dimen/_5sdp"
				app:cardCornerRadius="@dimen/_2sdp"
				app:cardElevation="@dimen/_5sdp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">



		<LinearLayout
				android:padding="@dimen/_5sdp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:textSize="@dimen/_10sdp"
						android:text="Qualification : "
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_height="wrap_content"/>

				<TextView
						android:textColor="#787878"
						android:textSize="@dimen/_8sdp"
						android:text="Qualification"
						android:layout_width="0dp"
						android:layout_weight=".7"
						android:layout_height="wrap_content"/>

			</LinearLayout>

			<LinearLayout
					android:layout_marginTop="@dimen/_2sdp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:textSize="@dimen/_10sdp"
						android:text="Experience : "
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_height="wrap_content"/>

				<TextView
						android:textColor="#787878"
						android:textSize="@dimen/_8sdp"
						android:text="1 Year"
						android:layout_width="0dp"
						android:layout_weight=".7"
						android:layout_height="wrap_content"/>

			</LinearLayout>

			<LinearLayout
					android:layout_marginTop="@dimen/_2sdp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:textSize="@dimen/_10sdp"
						android:text="Teaches : "
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_height="wrap_content"/>

				<TextView
						android:textColor="#787878"
						android:textSize="@dimen/_8sdp"
						android:text="Qualification"
						android:layout_width="0dp"
						android:layout_weight=".7"
						android:layout_height="wrap_content"/>

			</LinearLayout>

			<LinearLayout
					android:layout_marginTop="@dimen/_2sdp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:textSize="@dimen/_10sdp"
						android:text="Board : "
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_height="wrap_content"/>

				<TextView
						android:textColor="#787878"
						android:textSize="@dimen/_8sdp"
						android:text="Qualification"
						android:layout_width="0dp"
						android:layout_weight=".7"
						android:layout_height="wrap_content"/>

			</LinearLayout>

			<LinearLayout
					android:layout_marginTop="@dimen/_2sdp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:textSize="@dimen/_10sdp"
						android:text="Areas : "
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_height="wrap_content"/>

				<TextView
						android:textColor="#787878"
						android:textSize="@dimen/_8sdp"
						android:text="Qualification"
						android:layout_width="0dp"
						android:layout_weight=".7"
						android:layout_height="wrap_content"/>

			</LinearLayout>

			<LinearLayout
					android:layout_marginTop="@dimen/_2sdp"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:textSize="@dimen/_10sdp"
						android:text="Pincode : "
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_height="wrap_content"/>

				<TextView
						android:textColor="#787878"
						android:textSize="@dimen/_8sdp"
						android:text="Qualification"
						android:layout_width="0dp"
						android:layout_weight=".7"
						android:layout_height="wrap_content"/>

			</LinearLayout>


		</LinearLayout>

		</androidx.cardview.widget.CardView>

		<TextView
				android:layout_marginTop="@dimen/_10sdp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Profile Details"
				android:textColor="@color/dark_blue_color"
				android:textSize="@dimen/_12sdp"
				android:textStyle="bold"/>

		<androidx.cardview.widget.CardView

				android:layout_marginTop="@dimen/_5sdp"
				android:layout_marginLeft="@dimen/_5sdp"
				android:layout_marginRight="@dimen/_5sdp"
				android:layout_marginBottom="@dimen/_20sdp"
				app:cardCornerRadius="@dimen/_2sdp"
				app:cardElevation="@dimen/_5sdp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<LinearLayout
					android:padding="@dimen/_5sdp"
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="match_parent">

				<TextView
						android:textSize="@dimen/_10sdp"
						android:text="Tutoring Experience"
						android:layout_width="wrap_content"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_height="wrap_content"/>

				<TextView
						android:layout_marginTop="@dimen/_2sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:textSize="@dimen/_8sdp"
						android:text="Tutoring Experience"
						android:layout_width="wrap_content"
						android:textColor="#787878"
						android:layout_height="wrap_content"/>

				<TextView
						android:layout_marginTop="@dimen/_5sdp"
						android:textSize="@dimen/_10sdp"
						android:text="Tutoring Option"
						android:layout_width="wrap_content"
						android:textColor="#000000"
						android:textStyle="bold"
						android:layout_height="wrap_content"/>

				<TextView
						android:layout_marginTop="@dimen/_2sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:textSize="@dimen/_8sdp"
						android:text="Tutoring Experience"
						android:layout_width="wrap_content"
						android:textColor="#787878"
						android:layout_height="wrap_content"/>

			</LinearLayout>

		</androidx.cardview.widget.CardView>




	</LinearLayout>

	</ScrollView>

	<LinearLayout
			android:orientation="horizontal"
			android:id="@+id/btn_lay"
			app:layout_constraintTop_toBottomOf="@+id/main_lay"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<Button
				android:elevation="@dimen/_2sdp"
				android:text="Send Email"
				android:textColor="@color/white"
				android:textSize="@dimen/_10sdp"
				android:layout_marginRight="@dimen/_5sdp"

				android:layout_width="0dp"
				android:layout_weight=".5"
				android:layout_height="wrap_content"
				android:background="@color/blue_color_500"/>

		<Button
				android:elevation="@dimen/_2sdp"
				android:text="Request a Callback"
				android:textColor="@color/white"
				android:textSize="@dimen/_10sdp"
				android:layout_width="0dp"
				android:layout_weight=".5"
				android:layout_height="wrap_content"
				android:background="@color/blue_color_500"/>

	</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>