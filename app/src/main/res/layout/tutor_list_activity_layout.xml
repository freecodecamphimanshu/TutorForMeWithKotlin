<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		app:cardCornerRadius="@dimen/_2sdp"
		app:cardElevation="@dimen/_5sdp"
		android:layout_margin="@dimen/_5sdp"
		android:layout_height="wrap_content">

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<LinearLayout
				android:layout_gravity="center"
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_weight=".3"
				android:layout_height="wrap_content">

			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/tutorimage"
				android:layout_marginTop="@dimen/_5sdp"
				android:layout_gravity="center"
				android:layout_width="@dimen/_60sdp"
				android:layout_height="@dimen/_60sdp"
				/>

		<TextView
				android:textAllCaps="true"
				android:id="@+id/tutor_refrence_no"
				android:layout_marginTop="@dimen/_5sdp"
				android:textSize="@dimen/_8sdp"
				android:textStyle="bold"
				android:textColor="#787878"
				android:gravity="center"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text=""/>

			<TextView
					android:id="@+id/gender_age"
					android:layout_marginBottom="@dimen/_2sdp"
					android:textSize="@dimen/_8sdp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:gravity="center"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text=""/>

		</LinearLayout>

		<View
				android:layout_width="@dimen/_1sdp"
				android:layout_height="match_parent"
				android:background="@color/blue_color_800"
				android:layout_marginTop="@dimen/_5sdp"
				android:layout_marginBottom="@dimen/_5sdp"
		/>

		<LinearLayout
				android:layout_marginLeft="@dimen/_2sdp"
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_weight=".7"
				android:layout_height="wrap_content">

		<TextView
				android:id="@+id/tutorname"
				android:layout_marginRight="@dimen/_5sdp"
				android:layout_marginLeft="@dimen/_5sdp"
				android:textSize="@dimen/_12sdp"
				android:textColor="@color/blue_color_500"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text=""/>


			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:textSize="@dimen/_8sdp"
						android:textColor="#000000"
						android:layout_marginTop="@dimen/_5sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:layout_height="wrap_content"
						android:text="Experience  :"/>

				<TextView
						android:maxLines="3"
						android:id="@+id/tutor_experence"
						android:textSize="@dimen/_8sdp"
						android:textColor="#787878"
						android:layout_marginTop="@dimen/_5sdp"
						android:layout_marginRight="@dimen/_5sdp"
						android:layout_width="0dp"
						android:layout_weight=".7"
						android:layout_height="wrap_content"
						android:text=""/>

			</LinearLayout>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:textSize="@dimen/_8sdp"
						android:textColor="#000000"
						android:layout_marginTop="@dimen/_5sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:layout_height="wrap_content"
						android:text="Qualification :"/>
				<TextView
						android:id="@+id/tutorqualification"
						android:textSize="@dimen/_8sdp"
						android:textColor="#787878"
						android:layout_marginTop="@dimen/_5sdp"
						android:layout_marginRight="@dimen/_5sdp"
						android:layout_width="0dp"
						android:layout_weight=".7"
						android:layout_height="wrap_content"
						android:text=""/>


			</LinearLayout>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<TextView
						android:textSize="@dimen/_8sdp"
						android:textColor="#000000"
						android:layout_marginTop="@dimen/_5sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:layout_width="0dp"
						android:layout_weight=".3"
						android:layout_height="wrap_content"
						android:text="Teaches :"/>

				<TextView
						android:id="@+id/tutorteaches"
						android:textSize="@dimen/_8sdp"
						android:textColor="#787878"
						android:layout_marginTop="@dimen/_5sdp"
						android:layout_marginRight="@dimen/_5sdp"
						android:layout_width="0dp"
						android:layout_weight=".7"
						android:layout_height="wrap_content"
						android:text=""/>


			</LinearLayout>

			<LinearLayout
					android:layout_marginBottom="@dimen/_5sdp"
					android:layout_marginTop="@dimen/_5sdp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

				<Button
						android:textSize="@dimen/_8sdp"
						android:layout_marginLeft="@dimen/_5sdp"
						android:layout_marginRight="@dimen/_5sdp"
						android:textColor="@color/blue_color_500"
						android:layout_width="0dp"
						android:layout_weight=".5"
						android:layout_height="@dimen/_25sdp"
						android:text="Send Email"
						android:background="@drawable/round_blue_border_btn"
				/>

				<Button
						android:textSize="@dimen/_8sdp"
						android:layout_marginRight="@dimen/_5sdp"
						android:textColor="@color/blue_color_500"
						android:layout_width="0dp"
						android:layout_weight=".5"
						android:layout_height="@dimen/_25sdp"
						android:text="Request a callback"
						android:background="@drawable/round_blue_border_btn"
				/>

			</LinearLayout>

		</LinearLayout>



	</LinearLayout>

</androidx.cardview.widget.CardView>