<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/_150sdp"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardElevation="@dimen/_5sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tutor_image"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/study"/>

        <TextView
		        android:id="@+id/tutorname"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/blue_color_800"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Himanshu Dubey"/>

        <TextView
		        android:id="@+id/tutor_gend_age"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="#787878"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male, 25 Year"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/dark_blue_color"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

	        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">

		        <TextView
				        android:textSize="@dimen/_8sdp"
				        android:textColor="#000000"
				        android:layout_marginTop="@dimen/_5sdp"
				        android:layout_marginLeft="@dimen/_5sdp"
				        android:layout_width="0dp"
				        android:layout_weight=".3"
				        android:layout_height="wrap_content"
				        android:text="EmailID :"/>

		        <TextView
				        android:id="@+id/tutor_email_id"
				        android:textSize="@dimen/_8sdp"
				        android:textColor="#000000"
				        android:layout_marginTop="@dimen/_5sdp"
				        android:layout_marginRight="@dimen/_5sdp"
				        android:layout_width="0dp"
				        android:layout_weight=".7"
				        android:layout_height="wrap_content"
				        android:text=""/>

	        </LinearLayout>

	        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_8sdp"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:text="Mobile No.:"/>
		        <TextView
				        android:id="@+id/tutor_mobile"
				        android:textSize="@dimen/_8sdp"
				        android:textColor="#000000"
				        android:layout_marginTop="@dimen/_5sdp"
				        android:layout_marginRight="@dimen/_5sdp"
				        android:layout_width="0dp"
				        android:layout_weight=".7"
				        android:layout_height="wrap_content"
				        android:text=""/>


	        </LinearLayout>

	        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_8sdp"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:text="Experience:"/>

		        <TextView
				        android:id="@+id/tutor_exp"
				        android:textSize="@dimen/_8sdp"
				        android:textColor="#000000"
				        android:layout_marginTop="@dimen/_5sdp"
				        android:layout_marginRight="@dimen/_5sdp"
				        android:layout_width="0dp"
				        android:layout_weight=".7"
				        android:layout_height="wrap_content"
				        android:text=""/>


	        </LinearLayout>

	        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_8sdp"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:text="Qualification:"/>

		        <TextView
				        android:maxLength="20"
				        android:id="@+id/tutor_qualification"
				        android:textSize="@dimen/_8sdp"
				        android:textColor="#000000"
				        android:layout_marginTop="@dimen/_5sdp"
				        android:layout_marginRight="@dimen/_5sdp"
				        android:layout_width="0dp"
				        android:layout_weight=".7"
				        android:layout_height="wrap_content"
				        android:text=""/>

	        </LinearLayout>

	        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_8sdp"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Teaches:"/>

		        <TextView
				        android:maxLength="20"
				        android:id="@+id/tutor_teaches"
				        android:textSize="@dimen/_8sdp"
				        android:textColor="#000000"
				        android:layout_marginTop="@dimen/_5sdp"
				        android:layout_marginRight="@dimen/_5sdp"
				        android:layout_width="0dp"
				        android:layout_weight=".7"
				        android:layout_height="wrap_content"
				        android:text=""/>

	        </LinearLayout>

	        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/_8sdp"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:text="Area: "/>

		        <TextView
				        android:maxLength="20"
				        android:id="@+id/tutor_area"
				        android:textSize="@dimen/_8sdp"
				        android:textColor="#000000"
				        android:layout_marginTop="@dimen/_5sdp"
				        android:layout_marginRight="@dimen/_5sdp"
				        android:layout_width="0dp"
				        android:layout_weight=".7"
				        android:layout_height="wrap_content"
				        android:text=""/>

	        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_blue_color"/>


            <Button
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_gravity="center"
                android:text="Profile"
                android:textColor="@color/white"
                android:background="@drawable/round_shape_red_color"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp" />

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>